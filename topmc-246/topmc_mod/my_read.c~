int main(void)
{
char *buffer;
unsigned long long event = 0x35;
        sprintf(buffer,"0x%08x\n",event);
	printf("buffer = %s, len = %d\n",buffer,strlen(buffer));

	event = 0;
        sprintf(buffer,"0x%08x\n",event);
	 printf("buffer = %s, len = %d\n",buffer,strlen(buffer));
	



 return 0;
 int fd, num;
 char tmpch;
 fd = open("/proc/topmc/core00/uncore_counter6/enable",O_RDWR,S_IRUSR | S_IWUSR);
 
 if(fd != -1) {
  while(1) {
   read(fd,&tmpch,sizeof(char));
   printf("the my_driver is %c\n",tmpch);
   if(0 == num) {
    close(fd);
    break;
   }
  }
 } else{
   printf("device open failure/n"); 
 }

 return 0;
